<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo du cheval :"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/activity_horse_add_update_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/addphoto"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du cheval :"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/activity_horse_add_update_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PropriÃ©taire :"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"/>

    <ProgressBar
        android:id="@+id/activity_horse_add_update_spinner_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:indeterminateTint="@color/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/activity_horse_add_update_spinner_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/custom_spinner"/>

        <Spinner
            android:id="@+id/activity_horse_add_update_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="1dp"
            android:backgroundTint="@color/colorPrimary"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_horse_add_update_btn_save"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccentLight"
        android:visibility="gone">

        <TextView
            android:id="@+id/activity_horse_add_update_btn_save_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:textColor="@color/colorAccentLight"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/activity_horse_add_update_btn_save_progress"
            style="?android:progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:indeterminateTint="@color/colorAccentLight"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>